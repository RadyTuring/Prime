@model LoginVm

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="form-content">
    <div class="login-form">
        <div class="title">Prime Login</div>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-boxes">
                
                <div class="form-group">

                    <input asp-for="UserName" placeholder="Enter your user name" class="form-control" oninput="CheckValidity()" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <span id="usernameAvailabilityMessage" class="text-danger"></span>
                </div>
                <div class="form-group">
                   
                    <input asp-for="Password" placeholder="Enter your password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                

                <div class="button input-box">
                    <input type="submit" class="btnLogin" value="Login">
                </div>
                <div class="text sign-up-text">Don't have an account? <a asp-action="Create"> Signup now</a> </div>
            </div>
        </form>
    </div>
   
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
      
    }
