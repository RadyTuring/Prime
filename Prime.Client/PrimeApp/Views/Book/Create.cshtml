@model BookDto
@{
    string title = "Add Book";
    ViewData["Title"] = title;
    <partial name = "_titleBar" model = "@title" />
}


<div class="row">
    <br />
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="BookName" class="col-md-3 col-form-label">
                    Book Name
                    <span class="info-icon" data-toggle="tooltip" title="Enter the name of the book">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="PPkVersion" class="col-md-3 col-form-label">
                    PPK Version
                    <span class="info-icon" data-toggle="tooltip" title="Enter the PPK version">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="PPkVersion" class="form-control" />
                <span asp-validation-for="PPkVersion" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="UpdateLevelId" class="col-md-3 col-form-label">
                    Update Level
                    <span class="info-icon" data-toggle="tooltip" title="Select the update level">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <select asp-for="UpdateLevelId" class="form-control select2" asp-items="ViewBag.updatelevels">
                </select>
                <span asp-validation-for="UpdateLevelId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="DefaultImage" class="col-md-3 col-form-label">
                    Default Image
                    <span class="info-icon" data-toggle="tooltip" title="Upload the default image">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="DefaultImage" class="form-control" />
                <span asp-validation-for="DefaultImage" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="PPKFileName" class="col-md-3 col-form-label">
                    PPK File Name
                    <span class="info-icon" data-toggle="tooltip" title="Enter the PPK file name">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="PPKFileName" class="form-control" />
                <span asp-validation-for="PPKFileName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="GamesFileName" class="col-md-3 col-form-label">
                    Games File Name
                    <span class="info-icon" data-toggle="tooltip" title="Enter the games file name">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="GamesFileName" class="form-control" />
                <span asp-validation-for="GamesFileName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="GamesImage" class="col-md-3 col-form-label">
                    Games Image
                    <span class="info-icon" data-toggle="tooltip" title="Upload the games image">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="GamesImage" class="form-control" />
                <span asp-validation-for="GamesImage" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Prefix" class="col-md-3 col-form-label">
                    Prefix
                    <span class="info-icon" data-toggle="tooltip" title="Enter the prefix">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="Prefix" class="form-control" />
                <span asp-validation-for="Prefix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DownloadLink" class="col-md-3 col-form-label">
                    <span class="info-icon" data-toggle="tooltip" title="Enter url">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="DownloadLink" class="form-control" />
                <span asp-validation-for="DownloadLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkUrl" class="col-md-3 col-form-label">
                    <span class="info-icon" data-toggle="tooltip" title="Enter url">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="LinkUrl" class="form-control" />
                <span asp-validation-for="LinkUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="col-md-3 col-form-label">
                    Notes
                    <span class="info-icon" data-toggle="tooltip" title="Enter any notes">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </label>

                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">

                <br />
                <input type="submit" value="Create" class="btn btn-primary" />

            </div>


            <div class="form-group">
                <br />
                <a asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('.select2').select2();
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
